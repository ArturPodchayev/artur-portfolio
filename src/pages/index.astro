import Activities from "../components/Activities.astro";
---

<BaseLayout title="Artur — Portfolio">
  <!-- 1) HERO -->
  <HeroMotion client:load />

  <!-- 2) ABOUT (твой About.jsx) -->
  <About client:load />

  <!-- 3) MY 2025 -->
  <My2025 client:load />


<!-- ACTIVITIES -->
<Activities />
<!-- TECH STACK -->
<section id="stack" class="mt-14">
  <div class="flex items-end justify-between gap-4">
    <div>
      <h2 class="text-xl font-semibold">Tech Stack</h2>
      <p class="mt-2 text-zinc-400">
